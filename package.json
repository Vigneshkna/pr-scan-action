{
  "name": "pr-scan-action",
  "version": "1.0.0",
  "private": true,
  "description": "GitHub Action for Secret and SCA scan on pull request",
  "scripts": {
    "test": "node test/app.test.js",
    "build": "ncc build index.js -o dist"
  },
  "author": "VigneshKannan (https://github.com/Vigneshkna)",
  "license": "ISC",
  "repository": "github:Vigneshkna/pr-scan-action",
  "dependencies": {
    "@octokit/rest": "^20.0.1",
    "@probot/adapter-github-actions": "^3.1.1"
  },
  "devDependencies": {
    "@babel/plugin-transform-class-properties": "^7.22.5",
    "@semantic-release/git": "^10.0.1",
    "@vercel/ncc": "^0.36.1",
    "eslint": "^8.45.0",
    "nock": "^13.2.9",
    "semantic-release": "^20.0.0",
    "uvu": "^0.5.6"
  },
  "release": {
    "branches": [
      "main"
    ],
    "plugins": [
      "@semantic-release/commit-analyzer",
      "@semantic-release/release-notes-generator",
      [
        "@semantic-release/git",
        {
          "assets": [
            "dist/index.js"
          ],
          "message": "build(release): compiled action for ${nextRelease.version}\n\n[skip ci]"
        }
      ],
      "@semantic-release/github"
    ]
  },
  "jest": {
    "testEnvironment": "node"
  }
}
